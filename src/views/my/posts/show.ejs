<!-- src/views/posts/show.ejs -->

<%- contentFor('styles') %>
<%- contentFor('scripts') %>
<script>
const id = window.location.href.split('/').reverse()[0]

const generateTitle = ({ isLoading, post } = {}) => {
  if (isLoading) return `<div class="text-center">Loading...</div>`
  if (!post) return `<h1 class="text-center mb-3">Post ${id} Not Found!</h1>`

  return `<h1 class="text-center mb-3">Post ${id}</h1>`
}

const generatePost = ({ isLoading, post } = {}) => {
  if (isLoading || !post) return ''

  return `
    <div class="row">
      <div class="col-12 col-md-10 offset-md-1 col-lg-8 offset-lg-2">
        <div class="card">
          <div class="card-body text-center">

    <div class="container">
      <div class="row">
        <div class="col-12 col-md-8 offset-md-2">
          <p class="card-text mb-2">${post.content}</p>
          ${post.images.map((image) => `
            <img src="${image.url}" alt="${image.caption}" class="img-fluid mb-2">
            ${image.caption ? `<p class="card-text mb-2">${image.caption}</p>` : ''}
          `).join('')}

            <div>
              <a href="/my/posts/${id}/edit" class="btn btn-primary btn-sm">Edit</a>
              <button id="delete-post" class="btn btn-danger btn-sm">Delete</button>
            </div>

          </div>
        </div>
      </div>
    </div>
  `
}

const generatePage = (info) => {
  const $page = $('#pages-my-posts-show')
  const $title = generateTitle(info)
  const $post = generatePost(info)

  $page.html('').append($post)
}

const getPost = () => {
  axios({
    method: 'GET',
    url: `/api/my/posts/${id}`
  }).then((resp) => {
    generatePage({ post: resp.data })
  }).catch((err) => {
    generatePage()
  })
}

const handleDelete = (e) => {
  $(e.currentTarget).attr('disabled', true)

  axios({
    method: 'DELETE',
    url: `/api/my/posts/${id}`
  }).then((resp) => {
    window.location.href = '/my/posts'
  })
}

$(document).ready(() => {
  generatePage({ isLoading: true })
  getPost()
  $('#pages-my-posts-show').on('click', '#delete-post', handleDelete)
})
</script>

<%- contentFor('body') %>
<div id="pages-my-posts-show" class="container"></div>
